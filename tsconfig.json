{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "./build",
        "rootDir": "./src",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
